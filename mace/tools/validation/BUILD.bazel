# Examples
load(
    "//mace:mace.bzl",
    "if_android",
    "if_darwin",
    "if_opencl_enabled",
    "if_openmp_enabled",
)

cc_binary(
    name = "mace_run_static",
    srcs = ["mace_run.cc"],
    copts = [
        "-Werror",
        "-Wextra",
    ] + if_opencl_enabled([
        "-DMACE_ENABLE_OPENCL",
    ]),
    linkopts = if_darwin(
        [],
        default_value = ["-fuse-ld=gold"],
    ) + if_openmp_enabled([
        "-fopenmp",
    ]),
    linkstatic = 1,
    deps = [
        "//external:gflags_nothreads",
        "//mace/codegen:generated_mace_engine_factory",
        "//mace/codegen:libmodels",
        "//mace/libmace",
    ],
)

cc_binary(
    name = "mace_run_dynamic",
    srcs = ["mace_run.cc"],
    copts = [
        "-Werror",
        "-Wextra",
    ] + if_opencl_enabled([
        "-DMACE_ENABLE_OPENCL",
    ]),
    linkopts = if_darwin(
        [],
        default_value = ["-fuse-ld=gold"],
    ) + if_openmp_enabled([
        "-fopenmp",
    ]),
    linkstatic = 0,
    deps = [
        "//external:gflags_nothreads",
        "//mace/codegen:generated_mace_engine_factory",
        "//mace/codegen:libmodels",
        "//mace/libmace:libmace_dynamic",
    ],
)
